{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Flow draft",
  "description": "Input for Flow parser",
  "definitions": {
    "AssetPackDimensions": {
      "type": "string",
      "enum": [
        "1280_720_PX",
        "1440_810_PX",
        "1920_1080_PX",
        "2560_1440_PX",
        "3840_2160_PX",
        "CUSTOM"
      ]
    },
    "BlockAction": {
      "type": "string",
      "enum": [
        "MODIFY",
        "REMOVE",
        "FREEZE",
        "SUBSTITUTE",
        "OBFUSCATE"
      ]
    },
    "BlockType": {
      "type": "string",
      "enum": [
        "TEXT",
        "IMAGE",
        "LIST",
        "LINK",
        "COMPOSITE",
        "CANVAS",
        "BUTTON"
      ]
    },
    "FlowStatus": {
      "type": "string",
      "enum": [
        "DRAFT",
        "ASSET_PACK_READY",
        "READY"
      ]
    },
    "StepMatcherType": {
      "type": "string",
      "enum": [
        "URL_EQUALS",
        "URL_MATCHES",
        "URL_EXPERT"
      ]
    },
    "StepMatcherRuleType": {
      "type": "string",
      "enum": [
        "EQUALS_EXACT",
        "MATCHES_EXACT",
        "MATCHES_ANY",
        "EXPERT_REGEX"
      ]
    },
    "StepMatcherRuleTargetType": {
      "type": "string",
      "enum": [
        "PATH",
        "SEARCH",
        "HASH"
      ]
    },
    "StepMatchingRule": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/StepMatcherRuleType"
        },
        "value": {
          "type": "string"
        },
        "target": {
          "$ref": "#/definitions/StepMatcherRuleTargetType"
        },
        "sequence": {
          "type": "number"
        }
      },
      "required": [
        "type",
        "value"
      ]
    },
    "StepSnapshotStatus": {
      "type": "string",
      "enum": [
        "PROCESSING",
        "COMPLETED",
        "FAILED"
      ]
    },
    "VariableType": {
      "type": "string",
      "enum": [
        "TEXT",
        "IMAGE",
        "COLLECTION",
        "LOCATION",
        "COLOR"
      ]
    },
    "Block": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/BlockType"
        },
        "isTransient": {
          "type": "boolean"
        },
        "isRequired": {
          "type": "boolean"
        },
        "action": {
          "$ref": "#/definitions/BlockAction"
        },
        "selector": {
          "type": "string"
        },
        "defaultValue": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "type",
        "action",
        "selector"
      ]
    },
    "Logo": {
      "type": "object",
      "properties": {
        "symbolicSrc": {
          "type": "string",
          "format": "uri"
        },
        "fullSrc": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "symbolicSrc",
        "fullSrc"
      ]
    },
    "RepeatingGroupCell": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/BlockType"
        },
        "action": {
          "$ref": "#/definitions/BlockAction"
        },
        "selector": {
          "type": "string"
        },
        "default": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "type",
        "action",
        "selector"
      ]
    },
    "RepeatingGroupRow": {
      "type": "object",
      "properties": {
        "repeatable": {
          "type": "boolean",
          "default": true
        },
        "cells": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RepeatingGroupCell"
          }
        }
      },
      "required": ["repeatable", "cells"]
    },
    "RepeatingGroup": {
      "properties": {
        "name": {
          "type": "string"
        },
        "start": {
          "type": "number"
        },
        "target": {
          "type": "number",
          "default": 10
        },
        "bodySelector": {
          "type": "string"
        },
        "rowSelector": {
          "type": "string"
        },
        "rows": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RepeatingGroupRow"
          }
        }
      },
      "required": [
        "name",
        "start",
        "target",
        "bodySelector",
        "rowSelector",
        "rows"
      ]
    },
    "SessionSettings": {
      "type": "object",
      "properties": {
        "productTour": {
          "type": "object",
          "properties": {
            "dimensions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "value": {
                    "$ref": "#/definitions/AssetPackDimensions"
                  },
                  "customValue": {
                    "type": "string",
                    "description": "Actual value for option \"Custom\", e.g. 1340x580"
                  },
                  "preferred": {
                    "type": "boolean",
                    "default": true
                  }
                },
                "required": [
                  "value",
                  "preferred"
                ]
              }
            },
            "useSnapshot": {
              "type": "boolean",
              "default": true
            }
          },
          "required": ["dimensions"]
        }
      },
      "required": ["productTour"]
    },
    "Step": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "status": {
          "$ref": "#/definitions/FlowStatus",
          "default": "DRAFT"
        },
        "thumbSrc": {
          "type": "string",
          "format": "uri"
        },
        "snapshot": {
          "type": "object",
          "properties": {
            "status": {
              "$ref": "#/definitions/StepSnapshotStatus",
              "default": "COMPLETED"
            },
            "snapshotPage": {
              "type": "string",
              "format": "uri"
            },
            "useSnapshot": {
              "type": "boolean",
              "default": true
            }
          }
        },
        "urlMatching": {
          "type": "object",
          "properties": {
            "type": {
              "$ref": "#/definitions/StepMatcherType"
            },
            "url": {
              "type": "string",
              "format": "uri"
            },
            "rules": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/StepMatchingRule"
              }
            }
          },
          "required": [
            "url",
            "rules"
          ]
        },
        "instructions": {
          "description": "Free form description of actions to be performed",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "blocks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Block"
          }
        },
        "repeatingGroups": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RepeatingGroup"
          }
        }
      },
      "required": [
        "name",
        "urlMatching"
      ]
    },
    "User": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "avatarSrc": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "email"
      ]
    },
    "Variable": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "$ref": "#/definitions/VariableType"
          },
          "isTransient": {
            "type": "boolean"
          },
          "attributes": {
            "type": "string",
            "description": "e.g. \"Mock 20 people\" or \"Image dimensions is 100x100\""
          },
          "hint": {
            "type": "string"
          },
          "clarification": {
            "type": "string"
          },
          "defaultValue": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "type"
        ]
    }
  },
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "baseUrl": {
      "type": "string",
      "format": "uri"
    },
    "username": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "tenantSetup": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "logo": {
          "$ref": "#/definitions/Logo"
        },
        "presenter": {
          "$ref": "#/definitions/User"
        }
      },
      "required": [
        "name",
        "logo",
        "presenter"
      ]
    },
    "sessionSettings": {
      "$ref": "#/definitions/SessionSettings"
    },
    "variables": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Variable"
      }
    },
    "blocks": {
      "type": "array",
      "description": "Global blocks",
      "items": {
        "$ref": "#/definitions/Block"
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/Step"
      }
    }
  },
  "required": [
    "name",
    "baseUrl",
    "tenantSetup",
    "sessionSettings",
    "steps"
  ]
}
